<?xml version="1.0"?>
<run>
    <tool>
        <title>Exponential Plotter</title>
        <about>A tool to plot various functions of the form       y = a*x^n.</about>
        <command>@tool/jacob @driver</command>
    </tool>
    <input>
	<integer id='points'>
	    <about>
		<label>Number of Plot Points</label>
		<description>Enter the number of points to calculate between x=0 and the maximum </description>
	    </about>
	<default>100</default>
        <min>2</min>
	</integer>
        <number id="a">
            <about>
                <label>a</label>
                <description>Coefficient a in front of the exponential.</description>
            </about>
            <default>1</default>
	    <min>-1000000</min>
	    <max> 1000000</max>
        </number>
        <number id="n">
            <about>
                <label>n</label>
                <description>Power of the exponential.</description>
            </about>
            <default>1</default>
            <min>-1000</min>
            <max>1000</max>
        </number>
        <number id="scale">
            <about>
                <label>Maximum Value of X</label>
                <description>Plot will go from x=0 to this value.</description>
            </about>
            <default>10</default>
            <min>-10000</min>
            <max>10000</max>
	</number>
	</input>

	<output>
	  <curve id="xy">
		<about>
		  <label>Exponential Plot</label>
		  <description>Change in Y with changes in X</description>
		</about>
		<xaxis>
		  <label>x</label>
		  <description>input value</description>
		  <units></units>
		</xaxis>
		<yaxis>
		  <label>y</label>
		  <description>output</description>
		  <units></units>
		</yaxis>
	  </curve>	
	</output>
</run>
